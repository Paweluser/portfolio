---
interface Props {
  id: string;
  title: string;
  subtitle: string;
}

const { id, title, subtitle } = Astro.props;
---

<section id={id} class="flex flex-col items-center my-14 scroll-my-20 md:scroll-mt-24 lg:scroll-mt-28">
  <h2
    class="text-[var(--accent-color)] text-center md:text-2xl text-xl tracking-[6px] font-extralight lg:text-3xl uppercase px-2"
  >
    {title}
  </h2>
  <p class="text-[var(--second-color)] my-3 lg:my-5">{subtitle}</p>
  <slot />
</section>
